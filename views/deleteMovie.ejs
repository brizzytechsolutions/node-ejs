<%- include('../views/partials/nav'); %>

<body>
    <div id="login">
        <!-- <h3 class="text-center text-white pt-5">Register User</h3> -->
        <br>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="/deleteMovie/<%= movie._id %>" method="post">
                            <h3 class="text-center text-info">Delete User</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Title:</label><br>
                                <input type="text" name="title" id="title" class="form-control"
                                    value="<%= movie.title %>">
                            </div>
                            <div class="form-group">
                                <label for="director" class="text-info">Director:</label><br>
                                <input type="director" name="director" id="director" class="form-control"
                                    value="<%= movie.director %>">
                            </div>
                            <p class="lead">Are you sure you want to delete</p>
                            <br>
                            <input type="submit" name="submit" class="btn btn-info btn-md" value="Delete">
                            <br>
                            <hr>
                            <div class="">
                                <div id="register-link" class="">
                                    <a href="/movies" class="text-info btn btn-outline-secondary">back to movies</a>
                                </div>
                            </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
